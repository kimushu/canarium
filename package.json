{
  "name": "canarium",
  "version": "1.0.0-beta1",
  "description": "PERIDOT board driver library",
  "main": "./out/src/canarium.js",
  "scripts": {
    "clean": "rimraf out types",
    "compile": "tsc -p ./",
    "pretest": "npm run prepublish",
    "test": "node node_modules/mocha/bin/_mocha -- out/test/*.test.js",
    "lint": "tslint -p ./",
    "prepublish": "npm-run-all clean compile lint",
    "pretest:coverage": "npm run pretest",
    "test:coverage": "istanbul cover node_modules/mocha/bin/_mocha -- --no-timeouts out/test/*.test.js",
    "posttest:coverage": "remap-istanbul -i coverage/coverage.json -o coverage/html-report -t html",
    "doc": "typedoc --options typedoc.json"
  },
  "files": [
    "out/src/*.js",
    "types/src/*.d.ts",
    "README.md"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kimushu/canarium.git"
  },
  "dependencies": {
    "bson": "^1.0.4",
    "es6-promise": "^3.3.1",
    "serialport": "github:kimushu/node-serialport#master"
  },
  "keywords": [
    "PERIDOT",
    "Chrome",
    "canarium"
  ],
  "author": "kimu_shu",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/kimushu/canarium/issues"
  },
  "homepage": "https://github.com/kimushu/canarium#readme",
  "devDependencies": {
    "@types/chai-as-promised": "0.0.30",
    "@types/node": "^7.0.18",
    "chai": "^3.5.0",
    "chai-as-promised": "^6.0.0",
    "coffee-script": "^1.12.4",
    "elfy": "^0.1.0",
    "inquirer": "^3.0.1",
    "istanbul": "^0.4.5",
    "jsonfilter": "^1.1.2",
    "mocha": "^3.0.2",
    "mocha-multi": "^0.10.0",
    "mocha-steps": "^1.0.2",
    "npm-run-all": "^4.0.2",
    "remap-istanbul": "^0.9.5",
    "rimraf": "^2.6.1",
    "tslint": "^5.2.0",
    "typedoc": "^0.7.0",
    "typescript": "^2.3.2",
    "uglifyjs": "^2.4.10"
  }
}
